@using UTS_BrainBox.Client.Entities
@using UTS_BrainBox.Client.Entities.Admin
@using UTS_BrainBox.Client.Layout
@page "/dashboard"
@layout MainLayout
@inject HttpClient Http
@inject ISnackbar Snackbar

<PageTitle>Home</PageTitle>

<MudText Typo="Typo.h4" GutterBottom="true">Dashboard</MudText>
<div Class="d-flex flex-wrap gap-4" Elevation="0">
    <MudCard Class="align-center" Width="280px" Height="170px">
        <MudCardContent Class="align-content-center">
            <MudText style="text-align:center">@QuizCount</MudText>
            <MudText Typo="Typo.body2">Quizzes</MudText>
        </MudCardContent>
    </MudCard>
    <MudCard Class="align-center" Width="300px" Height="170px">
        <MudCardContent Class="align-content-center">
            <MudText style="text-align:center">0</MudText>
            <MudText Typo="Typo.body2">Users</MudText>
        </MudCardContent>
    </MudCard>
    <MudCard Class="align-center" Width="300px" Height="170px">
        <MudCardContent Class="align-content-center">
            <MudText style="text-align:center">0</MudText>
            <MudText Typo="Typo.body2">Pending Results</MudText>
        </MudCardContent>
    </MudCard>
    <MudCard Class="align-center" Width="300px" Height="170px">
        <MudCardContent Class="align-content-center">
            <MudText style="text-align:center">0</MudText>
            <MudText Typo="Typo.body2">Certificates</MudText>
        </MudCardContent>
    </MudCard>
</div>
<MudDivider DividerType="DividerType.Middle" Class="my-6"/>

<!--Code for Quizzes table -->
<MudTable T="CreateQuizzes" Items="@quizzes">
    <ToolBarContent>
        <MudText Typo="Typo.h6">All Quizzes</MudText>
        <MudSpacer />
        <MudTextField T="string" Placeholder="Search" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0"></MudTextField>
    </ToolBarContent>
    <HeaderContent>
        <MudTh>ID</MudTh>
        <MudTh>Name</MudTh>
        <MudTh>Description</MudTh>
        <MudTh>Category</MudTh>
        <MudTh>Duration (mins)</MudTh>
        <MudTh>Total Questions</MudTh>
        <MudTh>Status</MudTh>
        <MudTh>Attempts</MudTh>
        <MudTh>Actions</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="ID">@context.QuizID</MudTd>
        <MudTd DataLabel="Name">@context.Title</MudTd>
        <MudTd DataLabel="Description">@context.Description</MudTd>
        <MudTd DataLabel="Category">@context.Category</MudTd>
        <MudTd DataLabel="Duration (mins)">@context.Duration</MudTd>
        <MudTd DataLabel="Total Questions">@context.Questions</MudTd>
        @* <MudTd DataLabel="Status">@context.Status</MudTd> *@
        <MudTd DataLabel="Status">
            @* <MudSwitch @bind-Value="Basic_Switch2" Color="Color.Primary" /> *@
            @context.Status
        </MudTd>
        <MudTd DataLabel="Attempts">@context.Attempts</MudTd>
        <MudTd DataLabel="Actions">
            @* <MudIconButton Icon="@Icons.Material.Outlined.RemoveRedEye" /> *@
            <MudButton Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.RemoveRedEye" IconColor="Color.Primary" Size="Size.Small">View</MudButton>
        </MudTd>
    </RowTemplate>
    <PagerContent>
        <MudTablePager />
    </PagerContent>
</MudTable>

@code
{



    public bool Basic_Switch2 { get; set; } = true;

    private List<CreateQuizzes> quizzes = new();

    private int QuizCount = 0;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            quizzes = await Http.GetFromJsonAsync<List<CreateQuizzes>>("/api/admin/all-quizzes");

            QuizCount = quizzes.Count;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading quizzes: {ex.Message}");
        }
    }
}
