@page "/reports"
@using UTS_BrainBox.Client.Entities

<!--Code for Quizzes table -->
<MudTable T="UserReport" Items="@reportsData" Style="margin-top:15px;">
    <ToolBarContent>
        <MudText Typo="Typo.h6">Employee Reports</MudText>
        <MudSpacer />
        <MudTextField T="string" Placeholder="Search" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0"></MudTextField>
    </ToolBarContent>
    <HeaderContent>
        <MudTh>Employee ID</MudTh>
        <MudTh>Employee Name</MudTh>
        <MudTh>Quiz</MudTh>
        <MudTh>Score</MudTh>
        <MudTh>Date</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Employee ID">@context.EmployeeID</MudTd>
        <MudTd DataLabel="Employee Name">@context.EmployeeName</MudTd>
        <MudTd DataLabel="Quiz">@context.Quiz</MudTd>
        <MudTd DataLabel="Score">@context.Score</MudTd>
        <MudTd DataLabel="Date">@context.Date</MudTd>
    </RowTemplate>
    <PagerContent>
        <MudTablePager />
    </PagerContent>
</MudTable>

